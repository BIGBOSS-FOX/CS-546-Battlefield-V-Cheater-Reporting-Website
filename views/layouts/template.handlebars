                {{!-- <form id="login_form" action="/login" method="POST" enctype="x-www-form-urlencoded"> --}}
                <form id="login_form">
                    <div class="modal-body mx-3">
                        <div class="md-form mb-5">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <label data-error="wrong" data-success="right" for="defaultForm-email">Username</label>
                            <input type="text" id="username_login" name="username_login" class="form-control validate"
                                required="required">
                        </div>

                        <div class="md-form mb-4">
                            <i class="fas fa-lock prefix grey-text"></i>
                            <label data-error="wrong" data-success="right" for="defaultForm-pass">Password</label>
                            <input type="password" id="password_login" name="password_login"
                                class="form-control validate" required="required">
                        </div>
                        <span id="span_login"></span>

                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button id="login_submit" class="btn btn-outline-success">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalSignUpForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
