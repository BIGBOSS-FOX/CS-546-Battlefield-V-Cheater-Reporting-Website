<form method="POST" action="/users/{{user}}/avatar" id="avatar-form" enctype="multipart/form-data">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="exampleFormControlFile1"></label>
        <div class="col-sm-10">
            <input type="file" accept=".jpeg,.jpg,.png" class="form-control-file form-control-lg" id="exampleFormControlFile1" name="exampleFormControlFile1">
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block shadow">Submit</button>
</form>