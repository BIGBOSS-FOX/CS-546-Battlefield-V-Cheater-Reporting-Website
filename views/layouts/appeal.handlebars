<div class="row">
    <div class="col-md-12">
        <h2 class="report-title text-center shadow">Appeal</h2>
        <div class="greyBack">
            <div class="bs-callout bs-callout-default">
                <form method="POST" action="/users/{{user}}/appeal" id="appeal-form" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="exampleFormControlTextarea1">Evidence</label>
                        <div class="col-sm-10">
                            <textarea class="form-control form-control-lg btn-block shadow" id="exampleFormControlTextarea1" name="exampleFormControlTextarea1" required="required"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="link" class="col-sm-2 col-form-label">Link</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-control-lg shadow" id="link" name="link" placeholder="Link">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="exampleFormControlFile1"></label>
                        <div class="col-sm-10">
                            <input type="file"  accept=".jpeg,.jpg,.png" class="form-control-file form-control-lg" id="exampleFormControlFile1" name="exampleFormControlFile1">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block shadow">Submit</button>
                </form>

            </div>
        </div>

    </div>
</div>